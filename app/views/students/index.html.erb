<%= stylesheet_link_tag    "application", :media => "all" %>
<%= javascript_include_tag "application" %>
<%= csrf_meta_tags %>

	<div id="header-students">
		<div class="container">
			<div class="col-xs-3">
				<h1 class="text-left">Organizor</h1>
			</div>
		</div>
	</div>
<div class="container main">
<!-- Begin page content -->
  <div class="col-xs-12 main-content">
      <div class="col-md-8">
          <h3><%= @registration.name %></h3>
      </div>
      <% a = @registration %>
      <div class="col-md-4 text-right">
          <div class="form-group">
              <%= link_to "Logout",destroy_registration_session_path, {:method => :delete,class: "btn btn-primary"} %>
          </div>
      </div>		  
      <div class="row">
          <div class="col-md-12">
              <ul class="nav nav-pills seperator">
                  <li id="basic" class="active">
                  <%= link_to "Basic","/" %>
                  </li>
                  <%=  render "registrations/actions" %>
              </ul>
              <!-- some html5 data to be sent to the back end -->
              <div id="registration_id_div" data-registration_id='<%= a.id %>' data-model_sing='registration' data-model_plu='registrations' ></div>

              <div id="edit-resource-container"></div>
              <div id="action_div">
                  <%= render @partial, @locals %>
              </div>
          </div>
      </div>
  </div>
</div>
