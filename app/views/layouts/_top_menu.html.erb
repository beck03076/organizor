<div class="navbar navbar-default seperator" role="navigation">
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
  </div>
  <div class="container navbar-collapse collapse custom-navbar">

    <!-- Left nav -->
    <ul class="nav navbar-nav">

      <li id="dashboard">
        <a href="#"><span class="glyphicon glyphicon-th"></span>Dashboard</a>
      </li>


      <li id="students">
        <a href="#">
          <span class="glyphicon glyphicon-folder-open"></span> 
          Students
        </a>
          <ul class="dropdown-menu">
            <% [["enquiries","phone-alt"],["registrations","flag"],["web_enquiries","cloud-download","ContactType","Website"],["joined_students","ok-sign","ApplicationStatus","joined"]].each do |menu| %>
              <%= render_permitted_item(menu) %>
            <% end %>
          </ul>
      </li>         
      
      <% glyphs = {"educational" => "list-alt", "business" => "briefcase", "indirect" => "random"} %>
      <li id="partners">
        <a href="#">
          <span class="glyphicon glyphicon-heart"></span> 
          Partners
        </a>
          <ul class="dropdown-menu">
            <li id="all">
              <a href="/partners?partner_type=All">                   
                <span class="glyphicon glyphicon-th"></span>            
                <b>All</b>
              </a>
            </li>
          <% PartnerCategory.all.each do |p| %>
            <li id="<%= p.name %>">
              <a href="<%= "/partners?tab_type=PartnerCategory&tab_value=" + p.name %>">   
                <% p_name = p.name.downcase %>
                <span class="glyphicon glyphicon-<%= (glyphs.keys.include?(p_name) ? glyphs[p_name] : "") %>"></span>             
                <b><%= p.name.titleize %></b>
              </a>
              
                <% p.partner_types.all.each do |pt| %>
                    <li class="ml" id="<%= pt.name %>">                     
                      <%= link_to pt.name.titleize,"/partners?tab_type=PartnerType&tab_value=" + pt.name  %>
                    </li>  
                <% end %>
              
            </li>  
          <% end %>
          </ul>
      </li> 

      <li id="actions">
        <a href="#">
          <span class="glyphicon glyphicon-send"></span> 
          Actions
        </a>
          <ul class="dropdown-menu">
             <% [["emails","envelope"],["tasks","check"],["follow_ups","calendar"]].each do |menu| %>
               <%= render_permitted_item(menu) %>
             <% end %>
          </ul>
      </li> 

      <% [["people","globe"],["reports","stats"]].each do |menu| %>
          <%= render_permitted_item(menu) %>
      <% end %>

      <li id="users">
        <% if u.role?(:agency_administrator) %>
            <%= link_to "/users" do %><span class="glyphicon glyphicon-user"></span>Users<% end %>
        <% else %>
          <%= link_to "/users/#{current_user.id}" do %><span class="glyphicon glyphicon-user"></span>My account<% end %>
        <% end %>
      </li>

      <% if current_user.adm? %>
        <li id="configurations">
            <%= link_to "/configurations" do %><span class="glyphicon glyphicon-wrench"></span>System Configuration<% end %>
        </li>
      <% end %>      
    </ul>

  </div><!--/.nav-collapse -->
</div>