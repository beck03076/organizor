<!-- Partner information  - STARTS -->
<div class="row">
  <% %w(name email phone fax website).each do |el| %>
    <%= bs(f,el,"text_field",[nil,4],7,6) %>
  <% end %>  

  <%= bs(f,[:country_id,Country.order(:name),
              :id,
              :name,
              {prompt: "-country-"},
              {onchange: "prepSelect(this,
                       '.cities_select',
                       '/get_cities/');"}],
                       "collection_select",
                       [nil,4],7,6) %>

  

  <div class="clear"></div>
  <h4 class="bold-subhead">Assignment</h4>
  <div class="row">
    <%= bs(f,[:category_id,PartnerCategory.order(:name),
              :id,
              :name,
              {prompt: "-partner category-"},
              {onchange: "prepSelect(this,
                       '.partner_types_select',
                       '/get_partner_types/');deactivateGroup(this,'.partner_groups_select')"}],
    "collection_select",
    [nil,4],7,6) %>          

  <%= bs(f,[:type_id,PartnerType.order(:name),
            :id,
            :name,
            {prompt: "-partner type-"},
            {class: 'partner_types_select'}],
  "collection_select",
  [nil,4],7,6) %>

<%= bs(f,[:group_id,PartnerGroup.order(:name),
          :id,
          :name,
          {prompt: "-partner group-"},{class: 'partner_groups_select'}],
"collection_select",
[nil,4],7,6) %>


  <%= bs(f,[:assigned_to,User.order(:first_name),
            :id,
            :first_name,
            {prompt: "-assign to-"},{}],
  "collection_select",
  ["Assign To",4],7,6) %>  
  

</div>


<div class="clear"></div>
  <h4 class="bold-subhead">Location</h4>
  <div class="row">
    

                     <% %w(address_line1 address_line2).each do |el| %>
                       <%= bs(f,el,"text_field",[nil,4],7,6) %>
                     <% end %> 

                     <%= bs(f,[:city_id,City.order(:name),
                               :id,
                               :name,
                               {prompt: "-city-"},
                               {class: 'cities_select'}],
                     "collection_select",
                     [nil,4],7,6) %>

                   <%= bs(f,"address_post_code","text_field",[nil,4],7,6) %>
  </div>



<div class="clear"></div>
<h4 class="bold-subhead">Description</h4>
<div class="row">
  <%= bs(f,[:desc,{class: 'form-control', cols: nil, rows: nil}],"text_area",[nil,4],7,6) %>
</div>

</div>





