<!-- partners show page -->
<%= stylesheet_link_tag    "application", :media => "all" %>
<%= javascript_include_tag "application" %>
<%= csrf_meta_tags %>

	<div id="header-partners">
		<div class="container">
			<div class="col-xs-3">
				<h1 class="text-left">Organizor</h1>
			</div>
		</div>
	</div>
    <div class="container main">
        <!-- Begin page content -->
        <div class="col-xs-12 main-content">
            <div class="col-md-9">
                <h3><%= @institution.name %></h3>
            </div>

            <% a = @institution %> <div class="col-md-3 text-right">
                <div class="form-group">
                    <%= link_to "Logout",destroy_institution_session_path, {:method => :delete,class: "btn btn-primary"} %>
                </div>
            </div>


            <div class="row">
                <div class="col-md-12">
                    <ul class="nav nav-pills seperator">
                        <li id="basic" class="active">
                        <%= link_to "Basic","/" %>
                        </li>
                        <%= render "institutions/actions" %>
                    </ul>
                    <!-- some html5 data to be sent to the back end -->
                    <div id="institution_id_div" data-institution_id='<%= a.id %>' data-model_sing='institution' data-model_plu='institutions' ></div>

                    <div id="edit-resource-container"></div>
                    <div id="action_div">
                        <%= render @partial, @locals %>
                    </div>
                </div>
            </div>
        </div>
    </div>


<script>

 actmm('institutions'); 

</script>
