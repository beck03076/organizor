<!-- basic information about an person -->
<% a = @person %>

<div class="row border-b">
  
  <div class="col-xs-3">
    <%= render 'images/disp', core: "person", a: a %>


    <ul class="vlsdet-s" >
        <h4 class="bold-subhead">Quick Info</h4> 

           <%= li1('job_title','job_title',"span","strong",a)%>       
           <%= li2('type',[:type_id,:select,PersonType,:type_name],a,nil,"span","strong")%>          
           <%= li2('partner',[:partner_id,:select,Partner,:partner_name],a,nil,"span","strong")%>
           

           <% hsh = {emails: "by",follow_ups: "to",todos: "to",notes: "by"} %>
           <% %w(emails follow_ups todos notes).each do |act| %>
             <% out = meta(current_user.id,"person",act,a,hsh[act.to_sym]) %>
             <%= li1(act,out,'span','small')%>
           <% end %>
    </ul>

  </div>
  <div class="col-xs-5 row-top">
    <ul class="vlsdet pt-0 border-b">
        <h4 class="row-top bold-subhead">Personal</h4>
        <% %w(first_name surname date_of_birth gender).each do |v| %>
        <%= li1(v,v,'span','small',a)%>
        <% end %>
        
    </ul>
    <ul class="vlsdet-l">
        <h4 class="bold-subhead">Contact</h4>
        <% %w(mobile email work_phone home_phone address_line1 address_line2 address_post_code).each do |v| %>
        <%= li1(v,v,'span','small',a)%>
        <% end %>
        <%= li2('city',[:city_id,:select,City,
                  :city_name],a,nil,"span","small")%>
        <%= li2('nationality',[:country_id,:select,Country,
                  :nationality],a,nil,"span","strong")%>
    </ul>
  </div>
  <div class="col-xs-4">
    <div class="well well-sm form-last">
        <h4 class="bold-subhead">History</h4>
        <ul class="vlsdet-s pt-0">
           <%= li1('created_at',a.created_at.to_date,'span','small')%>
           <%= li1('created_by',a.cby,'span','small')%>
           <%= li1('Modified At',a.updated_at.to_date,'span','small')%>
           <%= li1('Modified By',a.uby,'span','small')%>
           <% out = current_user.id == a.assigned_to ? [a.ato,1,'to me'] : a.ato %>
           <%= li1('assigned to',out,'span','small')%>
           <%= li1('assigned by',a.aby,'span','small')%>
        </ul>

        
    </div>
    <br/>

  </div>
</div>
<div class="row">
  <div class="col-xs-7">
      <ul class="vlsdet pt-0">
            <h4 class="row-top bold-subhead">Personal</h4>
            <% %w(skype facebook linkedin twitter blogger website).each do |v| %>
            <%= li1(v,v,'span','small',a)%>
            <% end %>
      </ul>
  </div>     
  <div class="col-xs-5">
      <ul class="vlsdet pt-0">
        <h4 class="row-top bold-subhead">Description</h4>
        <%= li1('description','desc','span','small',a)%>
        </ul>
  </div>
</div>

</div>



<script>
  $('.best_in_place').best_in_place();
</script>
