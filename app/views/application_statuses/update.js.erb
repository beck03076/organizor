<!-- js the executes after application_status is changed -->
$("#reg_status_<%= @programme.id %>, #tag_reg_status_<%= @programme.id %> ").html("<%= @programme.application_status.name %>");

$("#status_select_<%= @programme.id %>").slideToggle();

<!-- If the application_status is joined then ask to update fees by the followin modal -->
<% if (@programme.application_status.name.downcase == "joined") %>

    <% ctnt = (render 'fees/create_fee', {a: @programme}) %>     
    $('#create-fee-container').html("<%= escape_javascript(render :partial => 'shared/modal',
                                         :locals =>   {id: 'create-fee', 
                                                       content: ctnt.html_safe,
                                                       header: 'Update Fees & Scholarship From Offer Letter',
                                                       button: nil}) %>");
                                                       
    $('#create-fee').modal('show');

<% end %>
