<!-- Enquiry show page -->
<% a = @registration %>
<% if current_user.is_a?(Registration) %>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <% basic_link = '/' %>
<% else %>
    <% basic_link = "/registrations/#{a.id}" %> 
<% end %>

<div class="col-md-8">
  <h3><%= @registration.name %></h3>
</div>

<div class="col-md-4 text-right">
                <div class="form-group">
                     <%= link_to "Edit", edit_registration_path(a), {class: "btn btn-primary"} %> 
                     <%= link_to "Clone", clone_registration_path(a), {class: "btn btn-primary"} %>
                </div>
</div>


<div class="row">
  <div class="col-md-12">
      <ul class="nav nav-pills seperator">
          <li id="basic" class="active">
           
          <%= link_to "Basic",basic_link %>
        </li>
        <%= render "registrations/actions" %>
      </ul>
      <!-- some html5 data to be sent to the back end -->
      <div id="registration_id_div" data-registration_id='<%= a.id %>' data-model_sing='registration' data-model_plu='registrations' ></div>

      <div id="edit-resource-container"></div>
      <div id="action_div">
        <%= render @partial, @locals %>
      </div>
  </div>
</div>



<script>

 acttm('students'); 
 actmm('registrations'); 

</script>
