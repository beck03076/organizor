                        <li><b>By :</b> 
                            <%= (User.where(id: a.updated_by).map &:first_name)[0] %>
                        </li>
                        <li><b>At :</b> 
                            <%= a.updated_at %>
                        </li>
                        <li><br><b>Currently Assigned</b></li>
                        <li><b>To :</b>
                            <%= (User.where(id: a.assigned_to).map &:first_name)[0] %>
                        </li>
                        <li><b>By :</b> 
                            <%= (User.where(id: a.assigned_by).map &:first_name)[0] %>
                        </li> 
                    </ul>
                </div>
            </div>
        </div>
<br/>
