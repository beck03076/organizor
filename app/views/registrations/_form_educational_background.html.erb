<% if false %>
  <!-- not using now, will be deprecated in the next release -->
  <h5>Qualification</h5>
  <div class="row">
    <%= bs(f,[:qualification_id,Qualification.order(:name),
              :id,
              :name,
              {prompt: "-qualification-"},{}],
    "collection_select",
    ['Qualification',4],7,6) %> 
  <% %w(subject institution grade exam score).each do |el| %>
    <%= bs(f,'qua_' + el,"text_field",[el,4],7,6) %>
  <% end %>
  </div>
