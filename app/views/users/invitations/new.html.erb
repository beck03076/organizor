
<div class="row border-b">
<div class="col-md-10">
<h3>
  Invite Users To Organizor
</h3>
</div>
<div class="col-md-2">
      <div class="form-group form-last pull-right">
        <%= link_to "List Users", users_path,{class: "btn btn-primary"} %>
      </div>
</div>
</div>

<div class="row">
  <div class="col-xs-12 well">
    <%= form_tag("/users/invitation",method: :post,id: 'invite_users') do %>            
              <div id="addInviteUserEmail">
                <h4 class="bold-subhead">Invitations To</h4>
                  <% (1..3).each do |i| %>

                    <div class="row">
                      <div class="col-xs-5"> 
                        <input data-order=<%= i %> class="form-control" name="email[<%= i %>]" type="text" placeholder="Email"/>
                      </div>  
                    </div>

                  <% end %> 
              </div>

              <div class="row">
                <div class="col-xs-5">
                    <% r = Role.all.reject{|i| i.name == "agency_administrator"} %>
                    <%= select_tag "role_id",
                                   options_from_collection_for_select(r, "id", "title_name"),
                                   {prompt: "-role-",
                                    id: "role_select",
                                    class: "form-control" } %>
                </div>
                <div class="col-xs-5">
                    
                    <%= select_tag "branch_id",
                                   options_from_collection_for_select(Branch.order(:name), "id", "name"),
                                   {prompt: "-branch-",
                                    id: "branch_select",
                                    class: "form-control" } %>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-2">
                  <div class="form-group">                     
                      <input type="submit" class="btn btn-primary form-control" value="Send Invite"/>
                  </div>
                </div>                
              </div>                           
    <% end %>
  </div>
</div>

<script type="text/javascript">
  actmm("users");
</script>

