<!-- User index -->


<div class="row row-top">
    <div class="col-md-10 users">
      <h3>Users</h3>
    </div>
    <div class="col-md-2">
      <div class="form-group form-last pull-right">
        <%= link_to "Invite Users", new_user_invitation_path,{class: "btn btn-primary"} %>
      </div>
    </div>
</div>


<div class="row well">
<div class="col-md-12">
          <div class="row">        
            <div class="col-md-2">
              <div class="bold-subhead row-top"> Filter By </div>
            </div>
            <div class="col-md-3 form-group">
                  <%= select_tag :abdc,
                      options_for_select(Branch.order(:name).map{|i| [i.name,i.id]}),
                      {prompt: "-all branch-",
                       class: "form-control hor-first",
                       onchange: "filterUsers(this,'branch');"} %>                  
            </div>
            <div class="col-md-3 form-group">
                  <%= select_tag :abdc,
                      options_for_select(Role.order(:name).map{|i| [i.name.titleize,i.id]}),
                      {prompt: "-all role-",
                       class: "form-control hor-first",
                       onchange: "filterUsers(this,'role');"} %>
            </div>
            <div class="col-md-3 form-group">
                  <%= select_tag :abdc,
                      options_for_select(Country.order(:name).map{|i| [i.name.titleize,i.id]}),
                      {prompt: "-all nationality-",
                       class: "form-control hor-first",
                       onchange: "filterUsers(this,'country');"} %>
            </div>
          </div>  
            <div class="row" id="users-table">
                <%= render 'table' %>
            </div>

</div>
</div>
<div id="resource-container"></div>
<script>
actmm("users");
</script>

