<script type="text/javascript">
$(function(){

  activeMM("usersMM");
  setColorsFromSession();


  $('li.all_users').addClass('active-tab');
  
   $('tr.user_name').hover(function(){
    $('span.delete_user').hide();
    $(this).find('span.delete_user').show();
  });
  
});

</script>

<div class="tab-container">
<%= render 'users/menus' %>
<div class="tab-content" style="display:block">
<div class="boxp box-theme-ch">
<div class="class="htab"">
        <h4 >
        Organizor Users
        </h4>
		</div>
        <br/>
<table class="tables2" border="0" cellpadding="0" cellspacing="0" width="100%">
                 <thead>
                  <tr>
                                        <th>First Name</th>
                                        <th>Email</th>
                                        <th>Role</th>
                                        <th>Invitation</th>
                                        <th>State</th>
                  </tr>
                </thead>
                <tbody>

        <% @users.each do |user| %>
          <tr class="user_name" onclick="window.open('/users/<%= user.id %>','_self',false);">
            <td ><%= user.first_name %>
            <span class="delete_user" style="display:none">
                &nbsp;&nbsp;&nbsp;
                <%= link_to 'delete',user, method: :delete, data: { confirm: 'Are you sure?' } %>
           </span>
            </td>
            <td><b><%= user.email %></b></td>
            <td><%= user.role.name.titleize rescue "Unassigned" %></td>
            <td><%= user.confirmed_at ? "Accepted" : "Not Accepted" %></td>
            <td><b><%= user.active_for_authentication? ? "Active" : "Inactive" %></b></td>
          </tr>
        <% end %>
        <tr>
          <td colspan="7" align="left"></td>
        </tr>

        </tbody>
        </table>
        <br/>
        <br/>
        <br/>
        <br/>
</div>
</div>
</div>


