        
  <% actions = %w(Email Follow\ up Note Todo Assign\ to Register Deactivate) %>    
  <% actions = @enquiry.registered ? actions - ['Register'] : actions %>
  <% actions = @enquiry.active ? actions : actions - ['Deactivate'] %>
  
        <% actions.each do |elem| %>
        
          <!--  Shortening variable names -->
          <% e = elem.downcase %>
          <%= radio_button_tag 'action',
                               e,
                               false,
                               onclick: "action_partial('enquiries',
                                                        '#{e.tr(" ", "_")}',
                                                        '#{@enquiry.id}');" %>
          <%= label_tag elem.titleize %>
          &nbsp;&nbsp;&nbsp;&nbsp;
        <% end %>
