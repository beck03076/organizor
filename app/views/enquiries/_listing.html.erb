<!-- Listing of enquiries -->
<% _id =  @status + "_enquiries" %>
<br/>

<!----------------------- New Enquiry ---------------------------->
<% if can? :create, Enquiry %>
<%= link_to "New Enquiry", new_enquiry_path, {class: "btnp"} %>
<% else %>
<%= link_to "New Enquiry", "#", {class: "btnpd"} %>
<% end %>
<!----------------------- Group Assign ---------------------------->
            <% div_id = "group_assign_to_" + _id %>
            
            <% if can? :update, Enquiry %>
              <%= link_to "Assign To", "#", {class: "btnp", onclick: "showPopUp('#{div_id}');"} %>
            <% else %>
              <%= link_to "Assign To", "#", {class: "btnpd"} %>
            <% end %>
            
            <div id="<%= div_id %>" class="addNewPop" data-model="Enquiry" style="display: none; top: 483px; left: 455px;"> 
              <div class="frbox">
                <%= image_tag "/images/icons/user_group.png" ,{size: "20x20"}%>
                <%= label_tag :user %>
                <%= select_tag "group_assign_user_#{_id}",
                               options_for_select(User.order(:first_name).map{|i| [i.name,i.id]}),
                               {:prompt => "--User--"} %>
                <span class="btnp bClose" onclick="groupAssignTo('<%= _id %>');">Assign</span>
              </div>
            </div>
           <!----------------------- Bulk Email ---------------------------->
           
           <% if can? :create, Email %>
             <%= link_to "Bulk Email", "#", {class: "btnp", onclick: "bulkEmail('#{_id}');"} %>
           <% else %>
             <%= link_to "Bulk Email", "#", {class: "btnpd"} %>
           <% end %>
                       
           <!----------------------- Group Delete ---------------------------->
            <% div_delete_id = "group_delete_to_" + _id %>
            
            <% if can? :destroy, Enquiry %>
              <%= link_to "Delete", "#", {class: "btnp ", onclick: "showPopUp('#{div_delete_id}');"} %>
            <% else %>
              <%= link_to "Delete", "#", {class: "btnpd "} %>
            <% end %>
            <div id="<%= div_delete_id %>" class="addNewPop" style="display: none; top: 483px; left: 455px;"> 
              <div class="frbox">
                <%= image_tag "/images/icons/folder_delete.png" ,{size: "20x20"}%>
                <h5>Are you sure about this group delete?</h5>
                <span class="btnp bClose" onclick="groupDelete('<%= _id %>');"> Yes </span>
                <span class="btnp bClose"> No </span>
              </div>
            </div>
<!---------------------------------------------------------------->
<table id='<%= _id %>' class="display" data-source="<%= enquiries_url(format: "json") %>">
<thead>
  <tr>
      <th>
      <%= check_box_tag "master",nil,false,{id: "master_check",class:"nowrap",checked: false, onclick: "toggleAllCheck(this,'#{_id}');"} %>
      </th>
      <th>
      <%= label_tag :actions %>
      </th>
      <% @cols.each do |i| %>
        <% if i.is_a?(Array) %>
          <th><%= i[1].to_s.titleize %></th>
        <% else %>
          <th <%= (i.to_s == 'statuses' ? 'class=statuses' : '') %>>
          <%= i.to_s.titleize %>
          </th>
        <% end %>
      <% end %>
     
  </tr>


</thead>

<%= image_tag "/images/icons/info.png",{class: "fr tooltip",
                                        title: "Use the dropdown to filter search. Use reset to clear the search box"} %>
       <span class="fr btnp" style="margin-left:10px"  onclick="$('.dataTables_filter input').val('').keyup();">
       Reset
       </span>
      

       <%= select_tag :abdc,
                      options_for_select(@cols.map{|i| i.is_a?(Array) ? [i[0].to_s.titleize,i[0]]  : [i.to_s.titleize,i] }.unshift(["Search",""])),
                      {id: "mySelect",style: "width:150px",class: "fr"} %>
                      

       <%= select_tag :abdc,
                      options_for_select([["FollowUp",""],["Today","todays"],["This Week","this_weeks"],["This Month","this_months"]]),
                      {id: "followUpSelect",style: "width:150px",class: "fr"} %>
                      
                      
                      <br/><br/>
       
<tbody>

</tbody>


</table>

            
            
<script>

$(function(){

dataTableStart("<%= _id %>","<%= @status %>","<%= @cols %>");
setColorsFromSession();
activeMM("enquiriesMM");


});
</script>
            
            
            
            
            
            
