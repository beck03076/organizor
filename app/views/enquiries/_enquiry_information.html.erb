        <div class="boxp">
          <div >
        <!-- Enquiry INFORMATION - STARTS -->
          <div class="htab">
             <h6><b>Enquiry Information</b></h6>
        </div><br/>
          <div class="cols">
               <div class="col6">
                    <div class="frbox">
                         <%= f.label :first_name %>
                         <%= f.text_field :first_name,{tabindex: "1"} %>
                    </div>
                    <div class="frbox">
                          <%= f.label :mobile1 %>
                          <%= f.text_field :mobile1,{tabindex: "3"} %>
                    </div>
                    <div class="frbox">
                         <%= f.label :email1 %>
                         <%= f.text_field :email1,{tabindex: "5"} %>
                    </div>
                    <div class="frbox">
                         <%= f.label :gender %>
                         <% {male: 'm', female: 'f'}.each do |i| %>
                            <%= f.radio_button :gender, i[1] %>
                            <%= f.label i[0].to_s.strip %>
                          <% end %>
                    </div>
                    <div class="frbox">
                         <%= f.label :country_of_origin %>
                         <%= f.collection_select(:country_id, 
                                Country.order(:name), 
                                :id, 
                                :name) %> &nbsp;&nbsp;
                    </div>
                    <div class="frbox">
                         <%= go_create(f,"student_source","source_id","name",1) %>  
                    </div>
                    
               </div>
               <div class="col6">
                    <div class="frbox">
                         <%= f.label :surname %>
                         <%= f.text_field :surname,{tabindex: "2"} %>
                    </div>
                    <div class="frbox">
                         <%= f.label :mobile2 %>
                         <%= f.text_field :mobile2,{tabindex: "4"} %>
                    </div>
                    <div class="frbox">
                         <%= f.label :email2 %>
                         <%= f.text_field :email2,{tabindex: "6"} %>
                    </div>
                    <div class="frbox">
                         <%= f.label :date_of_birth %>
                         <%= f.text_field :date_of_birth,{class: "dateField caltf ",tabindex: "7"} %>
                    </div>
                    <div class="frbox">
                         <%= f.label :score %>
                         <%= f.select :score,
                                   options_for_select((1..10)) %>

                    </div>
                    <%= fs(f,[:assigned_to, 
                     User.order(:first_name), 
                     :id, 
                     :first_name,
                     {:prompt => "--User--"}],"collection_select",1,"Assign To") %>
  <%= f.hidden_field :assigned_by, :value => current_user.id.to_s %> 
               </div>
          </div><br/><br/>
        <!-- ENQUIRY INFORMATION - ENDS -->
        
      
          </div>
