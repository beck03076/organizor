<% a = @enquiry %>
<div class="tab-content3" id="tab-content62">
        <div class="boxp">
            <div class="htab">
            <h5>
                <b>Contact type : 
                    <span class="sp">
                        <h6>
                            <b><%= disp1(a,"contact_type") %> </b>
                        </h6>
                    </span>
                </b>
            </h5>
            
            <%= link_to "Edit", edit_enquiry_path(a), {class: "btnp fr"} %>
            <%= link_to "Clone", clone_enquiry_path(a), {class: "btnp fr"} %>
            
            <div class="cl"></div>
        </div>
        <br/>
        <div class="cols brgb" style="padding-bottom:20px">
            <div class="col8">
                <div id="scrollboxu">
                    <img src="/images/icons/user.png" width="100"  class="imgb fl"/>
                    <div class="fl padl20">
                        <h5>
                        <b>                        
                            <%= a.name %>
                        </b>
                        <% stat = disp1(a,"status") %>
                        <span class='<%= stat %>'>
                          [<%= stat %>]
                        </span>
                        </h5>
                        <ul class="vlsdet">
                        <li><label>Mobile 1 </label>: <%= a.mobile1 %></li>
                        <li><label>Mobile 2 </label>: <%= a.mobile2 %></li>
                        <li><label>Email 1</label>: <%= a.email1 %></li>
                        <li><label>Email 2</label>: <%= a.email2 %></li>
                        <li><label>Country of Origin </label>: <%= disp1(a,"country_of_origin") %></li>
                        </ul>
                    </div>
                    <div class="cl"></div>
                    <br/>
                    <h4 class="htab">
                    Personal information
                    </h4>
                    <ul class="vlsdet">
                    <li><label>Date of Birth</label>: <%= a.date_of_birth %></li>
                    <li><label>Gender</label>: <%= a.gender == 'm' ? 'Male' : 'Female' %></li>
                    <li><label>Address</label>: <%= disp0(a,'address') %></li>
                    </ul><br/>
                    <h4 class="htab">
                    Preferred countries
                    </h4>
                    <ul class="vlsdet">
                    <li><%= disp2(a,"countries") %></li>
                    </ul><br/>
                    <h4 class="htab">
                    Programmes interested
                    </h4>
                    <ul class="vlsdet">
                    <% a.programmes.each do |i| %>
                      
                      <% j = i.programme_type.try(:name).titleize rescue "Unknown" %>
                                               
                        <li><label>Type</label>: <%= j %></li>
                        <li><label>Institution</label>: <%= i.institution.try(:name) %></li>
                        <li><label>City</label>: <%= i.city.try(:name) %></li>
                        <li><label>Country</label>: <%= i.country.try(:name) %></li>
                        
                        <% if j == "University" %>
                          <li><label>Course Level</label>: <%= i.course_level.try(:name)  %></li>
                        <% end %>
                        
                        <li><label>Course Subject</label>: <%= i.course_subject_text %> </li>
                        <li><label>Start Date</label>: <%= i.start_date %></li>
                        <div class="cl"></div>
                        <br/>
                        <span class="fl">
                        <%= link_to i._created_by.first_name,"#" %> &nbsp;&nbsp; <%= i.created_at.strftime("%A, %F %R %p") %>
                        </span>
                        <br/>
                        <br/>
                        <div class="brg0"> </div>
                        <br/>
                        <br/>
                    <% end %>

                    </ul>
                </div>
            </div>
            <div class="col4 ">
                <div class="boxs">
                    <ul class="infodhls">
                        <li>Enquiry history</li>
                        <li>
                        <b>Inquiry date :</b> 
                          <%= a.created_at.to_date %>
                        </li>
                        <li>
                        <b>Enquiry Source :</b> 
                          <%= disp1(a,'student_source') %>
                        </li>
                        <li>
                        <b>Created by :</b> 
                            <%= (User.where(id: a.created_by).map &:first_name)[0] %>
                        </li>
                        <li>
                        <b>Created at :</b> 
                          <%= a.created_at %>
                        </li>
                        <li>
                        <br>
                        <b>Last modified</b></li>
                        <li><b>By :</b> 
                            <%= (User.where(id: a.updated_by).map &:first_name)[0] %>
                        </li>
                        <li><b>At :</b> 
                            <%= a.updated_at %>
                        </li>
                        <li><br><b>Currently Assigned</b></li>
                        <li><b>To :</b>
                            <%= (User.where(id: a.assigned_to).map &:first_name)[0] %>
                        </li>
                        <li><b>By :</b> 
                            <%= (User.where(id: a.assigned_by).map &:first_name)[0] %>
                        </li> 
                    </ul>
                </div>
            </div>
        </div>
        <%= image_tag "/images/icons/exchange_top.png",{class: "fr",width: "20", onclick: "$('div#timeline-display').slideToggle();"} %>
        <div id="timeline-display">
            <br/><div class="htab">
            <h5><b>Timeline</b></h5>
            </div><br/>
            <div id="scrollboxu"  style="height:440px">    
            <ul class="vlsdn">
                <%= render 'timeline' %>
            </ul>
            </div>
        </div>
        <br/><br/>
        
        <div id="enquiry_id_div" data-enquiry_id='<%= a.id %>' data-model_sing='enquiry' data-model_plu='enquiries' >
        </div>
        <div class="htab">
        <h5><b>Action</b></h5>
        
        </div>
        <div class="boxstheme">
          <%= render "actions" %>
          <!-- Action container -->
          <div id="action_div">
          </div>
       </div>
<!-- INQUIRY DETAILS - ENDS -->



