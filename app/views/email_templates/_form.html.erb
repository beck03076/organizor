<!-- edit only email_templates -->
<div class="row">
      <div class="<%= div %>">
        <%= form_for(new_resource, html: {class: 'form-horizontal'}) do |f| %>
          <% if h == "New" %>
              <h4 class="form-heading"><%= h %> <%= resource_disp1 %></h4>
              <br/>
          <% end %>
          <%= bs(f,"name","text_field",[nil,1],12) %>
          <%= bs(f,"subject","text_field",[nil,1],12) %>
          <%= bs(f,[:body,
                   {class: 'form-control tinymce',
                    cols: nil, 
                    rows: nil, 
                    style: 'width:500px;height:700px;'}],"text_area",[nil,1],12) %>
          <%= bs(f,[:signature,
                   {class: 'form-control tinymce',
                    cols: nil, 
                    rows: nil, 
                    style: 'width:350px;height:200px;'}],"text_area",[nil,1],12) %>
          <%= bs(f,[:desc,{class: 'form-control', cols: nil, rows: nil}],"text_area",[nil,1],12) %>
          
          <div class="form-group form-last">
            <div class="col-sm-offset-10 col-sm-10">
              <%= f.submit "Save", {class: "btn btn-primary"} %>
            </div>
          </div>
        <% end %>
      </div>
</div>

