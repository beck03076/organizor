<!DOCTYPE html>
<html>
<head>
  <title>Organizor</title>
  <%= stylesheet_link_tag    "home" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= csrf_meta_tag %>
  <link rel="shortcut icon" type="image/x-icon" href="/images/icons/reportm.png">
 
  
  <!--p class="notice"><%= notice %></p-->
  <!--p class="alert"><%= alert %></p-->
</head>
<body>
<script type="text/javascript">
$(document).ready(function(){
$('#fade').cycle();
});
</script>
<div id="fade">
<img src="/images/b1.jpg" class="theme"/>
<img src="/images/b2.jpg" class="theme"/>
<img src="/images/b3.jpg" class="theme"/>
</div>
<div id="bg1">
<div id="login-box">
<table cellpadding="10" cellspacing="0" width="100%" height="100">
<tr>
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name) ) do |f| %>
    <td align="left" valign="bottom" class="tw" style="padding:10px 0 0 20px">
     <%= f.label :email %>
      
    </td>
    <td align="left" valign="bottom" class="tw" style="padding:10px 10px 0 20px">
      <%= f.label :password %>
      
    </td>
    

    <td align="center" valign="middle" rowspan="3" width="90" class="lb pad10">
    <span class="th35">
         <%= f.submit 'Go', :class => "white-button"%>
    </span>
    </td>
<% if flash[:notice] %>
            <h3 id="message" class="htab addNewPop" style="display: block; top: 483px; left: 455px;">
              <%= flash[:notice] %>
              <br/>
              <small>
              <i>Click outside to continue</i>
              </small>
            </h3>
<% end %>

</tr>
<tr>
<td align="left" valign="top" style="padding:10px 0 0 20px">
<%= f.email_field :email, :autofocus => true,:class=> "tfuw",:placeholder => "Enter your email id" %>
</td>

<td align="left" valign="top" style="padding:10px 10px 0 20px">
<%= f.password_field :password,:class=> "tfup", :placeholder => "Enter your password" %>
</td>
</tr>
<tr>
<td class="white-text">
<% if devise_mapping.rememberable? -%>
 <%= f.check_box :remember_me %> <%= f.label :remember_me,:class => "white-text" %>
<% end -%>
</td>
<td>
<div align="right" class="white-link">
<%= flash[:notice] %>
<%= render "devise/shared/links" %>
</div>
</td>
</tr>
<% end %>
</table>
</div>
</div>
</body>
</html>
