<!DOCTYPE html>
<html>
<head>
  <title>Forgot your password?</title>
  <%= stylesheet_link_tag    "home" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
 
  
  <!--p class="notice"><%= notice %></p-->
  <!--p class="alert"><%= alert %></p-->
</head>
<body>
<script type="text/javascript">
$(document).ready(function(){
$('#fade').cycle();
});
</script>
<div id="fade">
<img src="/images/b1.jpg" class="theme"/>
<img src="/images/b2.jpg" class="theme"/>
<img src="/images/b3.jpg" class="theme"/>
</div>
<div id="bg1">
<div id="login-box" style="width:450px">
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
<center>
<h2 style="color:#fff">Forgot Your Password?</h2>
<h4 style="color:#fff">Enter your email and reset</h4>

</center>
<table cellpadding="10" cellspacing="0" width="100%">
<tr>
     <td align="center">
     <%= f.text_field :email %>
     <%= f.submit 'Reset'%>
     <div align="center" class="white-link">
      <%= render "devise/shared/links" %>
     </div>
     </td>
     <td>
       
    </td>
</tr>
</table>
<% end %>
</div>
</div>
</body>
</html>



