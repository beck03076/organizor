

          <!-- NEW Institution  - STARTS -->
        <div class="boxp box-theme-ch">
          <div >
        <!-- Institution INFORMATION - STARTS -->
          <div class="htab">
             <h6><b>Institution Information</b></h6>
              
               <%= f.submit "Save",{:class => "btnp fr"} %>
               <%= f.submit "Save and New",{:class => "btnp fr", :name => 'save_new'} %>
              <div class="cl"></div>
        </div><br/>
          <div class="cols">
               <div class="col6">
                    <div class="frbox mand">
                         <%= f.label "Name*" %>
                         <%= f.text_field :name,{tabindex: "1",
                                                 :data => {:maxlength => "",
                                                           :minlength => "",
                                                           :label => "",
                                                           :req => "Y"},
                                                 :onblur => "validate(this.id,'AS');" } %>
                    </div>
                    <div class="frbox mand">
                         <%= f.label "Email*" %>
                         <%= f.text_field :email,{tabindex: "3",
                                                   :data => {:maxlength => "",
                                                                 :minlength => "",
                                                                 :label => "",
                                                                 :req => "Y"},
                                                       :onblur => "validate(this.id,'E');"} %>
                    </div>
                    <div class="frbox">
                          <%= f.label "Website" %>
                          <%= f.text_field :website,{tabindex: 5} %>
                    </div>
                    <div class="frbox mand">
                         <%= f.label "Address line1*" %>
                         <%= f.text_field :address_line1,{tabindex: "7",
                                                   :data => {:maxlength => "",
                                                                 :minlength => "",
                                                                 :label => "",
                                                                 :req => "Y"},
                                                       :onblur => "validate(this.id,'');"} %>
                    </div>
                    <div class="frbox mand">
                    <%= label_tag "Country*" %>
                    <%= f.collection_select(:country_id, 
                                            Country.order(:name), 
                                            :id, 
                                            :name,
                                            {:prompt => "--Country--"},
                                            {tabindex: 9,
                                             :class => "countries_select",
                                             :onchange => "simplePrepareSelect(this,
                                                           '#institution_city_id',
                                                           '/get_cities/');"}) %>
                    </div>
                    <div class="frbox">
                          <%= f.label "Post Code" %>
                          <%= f.text_field :address_post_code,{tabindex: 11} %>
                    </div>
                     
                    <div class="frbox">
                          <%= f.label "Description" %>
                          <%= f.text_area :desc,{tabindex: 13,
                                                 style: "width=400px;",
                                                 size: "13x3"} %>
                    </div>
               </div>
               <div class="col6">
                     <div class="frbox mand">
                             <%= go_create(f,"institution_type","type_id","name",1,"frbox",2) %>  
                     </div>
                     <div class="frbox mand">
                              <%= f.label "Phone*" %>
                              <%= f.text_field :phone,{tabindex: "4",
                                                         :data => {:maxlength => "",
                                                                     :minlength => "",
                                                                     :label => "",
                                                                     :req => "Y"},
                                                           :onblur => "validate(this.id,'ANS');"} %>
                     </div>
                     <div class="frbox">
                          <%= f.label "Fax" %>
                          <%= f.text_field :fax,{tabindex: "6"} %>
                    </div>
                    <div class="frbox">
                          <%= f.label "Address line2" %>
                          <%= f.text_field :address_line2,{tabindex: "8"} %>
                    </div>
                    <%= fs(f,[:city_id, 
                            City.order(:name), 
                            :id, 
                            :name,{},
                            {tabindex: 10}],"collection_select",1,"city") %>
                    
                    <%= fs(f,[:assigned_to, 
                     User.order(:first_name), 
                     :id, 
                     :first_name,{},
                            {tabindex: 12}],"collection_select",1,"Assign To") %>
               </div>
          </div><br/><br/>
        <!-- INSTITUTION INFORMATION - ENDS -->
</div>
