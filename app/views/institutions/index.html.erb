<h1>Listing institutions</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Poc</th>
    <th>City</th>
    <th>Country</th>
    <th>Type</th>
    <th>Created by</th>
    <th>Updated by</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @institutions.each do |institution| %>
  <tr>
    <td><%= institution.name %></td>
    <td><%= institution.poc %></td>
    <td><%= institution.city_id %></td>
    <td><%= institution.country_id %></td>
    <td><%= institution.type_id %></td>
    <td><%= institution.created_by %></td>
    <td><%= institution.updated_by %></td>
    <td><%= link_to 'Show', institution %></td>
    <td><%= link_to 'Edit', edit_institution_path(institution) %></td>
    <td><%= link_to 'Destroy', institution, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

