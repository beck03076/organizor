<!-- User index -->


<div class="row row-top">
    <div class="col-xs-10 emails">
      <h3>Emails</h3>
    </div>
    <div class="col-xs-2">
      <div class="form-group form-last pull-right">
        <%= link_to "New Email", new_user_invitation_path,{class: "btn btn-primary"} %>
      </div>
    </div>
</div>


<div class="row">
<div class="col-xs-12 data-table">
<div class="well well-sm filter-well">
                        <div class="row row-top" id="todo-filter" >
                          <div class="col-xs-1">
                            <h4>Filter</h4>
                          </div>
                          <div class="col-xs-11">
                          <%= form_tag "/emails/filter",{method: "post", remote: true, class: 'form-inline'} do %>
                            <div class="form-group">
                            <div class="col-xs-2" >
                                <%= select_tag :abdc,
                                      options_for_select([["sent to","to"],
                                                         ["sent by","by"]]),
                                      {prompt: "-sent-",
                                       id: "sent",
                                       class: "form-control",
                                       onchange: "$('#to,#by').hide();
                                                  $('#' + this.value).show();
                                                  $('select#sent_to,select#sent_by').val('');"} %>
                              </div>
                            </div>
                          <div class="form-group">
                            <div id="by" style="display:none;">
                                <%= select_tag :sent_by,
                                    options_for_select([["User","user"]]),
                                    {prompt: "-who-",
                                    class: "form-control",
                                    onchange: "token(this.value,'email');"} %>
                            </div>
                          </div>
                          <div class="form-group">
                            <div id="to" style="display:none;">
                                <%= select_tag :sent_to,
                                    options_for_select([["Enquiry","enquiry"],
                                                         ["Registration","registration"],
                                                         ["Institution","institution"],
                                                         ["Person","person"]]),
                                    {prompt: "-who-",
                                     class: "form-control",
                                     onchange: "token(this.value,'email');"} %>
                            </div>
                          </div>
                          <%= link_to "date","#",{onclick: "$('#id_from_date,#id_to_date').toggle();"}  %>
                          <div class="form-group">
                            <div id="id_from_date" style="display:none;">
                                <%= text_field_tag :from_date,nil,{class: "datepicker form-control",placeholder: "from date" }%>
                            </div>
                          </div>
                          <div class="form-group">
                            <div id="id_to_date" style="display:none;">
                                <%= text_field_tag :to_date,nil,{class: "datepicker form-control",placeholder: "to date" }%>
                            </div>
                          </div>

                          <div class="col-xs-3 filter_container" ></div>
                          <div class="form-group">
                            <%= submit_tag "Search",{class: 'btn btn-primary', onclick: "$('.emails > h3').append('<img class=temp src=/images/icons/sload.gif >');"} %>
                          </div>
                          <% end %>
                          </div>
                        </div>
                      </div>

            <div id="emails-table">
                <%= render 'table' %>
            </div>

</div>
</div>

<script>
actmm("emails");
</script>


