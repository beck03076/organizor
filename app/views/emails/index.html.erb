<!-- User index -->


<div class="row row-top">
    <div class="col-xs-10 emails">
      <h3>Emails</h3>
    </div>

</div>


<div class="row">
<div class="col-xs-12">
<div class="well">
  <%= form_tag "/emails/filter",{method: "post", remote: true,class: "form-horizontal"} do %>
  <div id="todo-filter" class="blue-well data-table">    
        <div class="row">
            <div class="col-xs-12"><h4 class="bold-subhead border-b">Filter By</h4></div>              
                <div class="col-xs-3">          
                  <%= select_tag :abdc,
                        options_for_select([["sent to","to"],
                                           ["sent by","by"]]),
                        {prompt: "-sent-",
                         id: "sent",
                         class: "form-control vert-center",
                         onchange: "$('#to,#by').hide();
                                    $('#' + this.value).show();
                                    $('select#sent_to,select#sent_by').val('');"} %>
                </div>
                <div class="col-xs-3" id="by" style="display:none;">
                  <%= select_tag :sent_by,
                      options_for_select([["User","user"]]),
                      {prompt: "-who-",
                      class: "form-control vert-center",
                      onchange: "token(this.value,'email');"} %>                            
                </div>
                <div class="col-xs-3" id="to" style="display:none;">
                  <%= select_tag :sent_to,
                        options_for_select([["enquiry","enquiry"],
                                             ["registration","registration"],
                                             ["partner","partner"],
                                             ["person","person"]]),
                        {prompt: "-who-",
                         class: "form-control vert-center",
                         onchange: "token(this.value,'email');"} %>
                </div>     
                <div class="col-xs-4 filter_container"></div>
        </div>
        <div class="row">
              <div class="col-xs-12"><h4 class="bold-subhead border-b">Date Range</h4></div>
              <div class="col-xs-4">
                <%= text_field_tag :from_date,nil,{class: "datepicker form-control vert-center",placeholder: "-from-" }%>
              </div>
              <div class="col-xs-4">
                <%= text_field_tag :to_date,nil,{class: "datepicker form-control vert-center",placeholder: "-to-"}%>
              </div>
              <div class="col-xs-2">&nbsp;</div>
              <div class="form-group col-xs-2">
                <%= submit_tag "Filter",{class: 'btn btn-primary vert-center', onclick: "$('.emails > h3').append('<img class=temp src=/images/icons/sload.gif >');"} %>
              </div>              
        </div>
  </div>
  <% end %>
  <div class="padAll10" id="emails-table">
      <%= render 'table' %>
  </div>

</div>
</div>
</div>

<script>
actmm("emails");
</script>


<link rel="stylesheet" href="/css/jquery-ui-1.10.4.custom.css">
