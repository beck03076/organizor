<%= form_for EmailTemplate.new do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    </br>
    </br>
    <%= f.label :subject %>
    <%= f.text_field :subject %>
    </br>
    </br>
    <%= label_tag :body %>
    <%= f.text_area :body,{:class=>"tinymce",:style => 'width:500px;height:700px;'} %> 
    </br>
    </br>    
    <%= f.label :signature %>
    <%= f.text_field :signature %>
                       <br/><br/>
                       
    <%= f.submit "Create",{class: 'btnp'} %>    
  <% end %>
<script>

tinymce.init({
     selector: "textarea.tinymce",
     theme: "advanced",
     plugins: [
      "advlist autolink lists link image charmap print preview hr anchor pagebreak",
      "searchreplace wordcount visualblocks visualchars code fullscreen",
      "insertdatetime media nonbreaking save table contextmenu directionality",
      "emoticons template paste textcolor ",
      "uploadimage"
     ],
     toolbar1: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image",
     toolbar2: "print preview media | forecolor backcolor emoticons | uploadimage",
     image_advtab: true,
     templates: [
      {title: 'Test template 1', content: '<b>Test 1</b>'},
      {title: 'Test template 2', content: '<em>Test 2</em>'},
        {
            title: "Timestamp",
            url: "/enquiries_action_partial/register/1",
            description: "Adds an editing timestamp."
        }
     ],
     autosave_ask_before_unload: false
});
setColorsFromSession();
</script>
