<%= simple_form_for(@todo) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :topic_id %>
    <%= f.input :desc %>
    <%= f.input :status_id %>
    <%= f.input :duedate %>
    <%= f.input :priority %>
    <%= f.input :created_by %>
    <%= f.input :updated_by %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
