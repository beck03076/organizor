<h4>
<img src="/images/icons/org_todos.png" width=20 />
Todo
</h4>
<br/>
<br/>
<div style="height:0">&nbsp;</div>
<div class="previewBox">


<% if !@todo.enquiry_id.nil? %>
  Associated with: <%= link_to 'Enquiry',"/enquiries/#{@todo.enquiry_id}" %>
<% end %>
<% if !@todo.registration_id.nil? %>
  Associated with: <%= link_to 'Registration',"/registrations/#{@todo.registration_id}" %>
<% end %>
<% u = @todo._ass_by %>
<%= image_tag((u.image? ? u.image_url : "/images/icons/user.png"),
                                   {width: "40",
                                    class: "imgb fl",
                                    style: "margin-right:10px;"})  rescue nil %>
               <span style="color:#999;">
                <ul class="vlsdet">
                   <li><label>Topic </label>:  <%= @todo.topic.name rescue "Unknown" %></li>
                   <br/>
                   
                
                </ul>
               </span>
               <%= link_to u.first_name,u  rescue nil%> 
              &nbsp;&nbsp; 
              <%= @todo.created_at.strftime("%A, %F %R %p") rescue "Unknown" %>
               <br/>
               <br/>

<h2><%= @todo.done ? "Done" : "Not Completed" %></h2>

<ul class="vlsdet">

   <li><label>Status </label>: <%= @todo.status.name rescue "Unknown" %></li>
   <li><label>Due Date </label>: <%= @todo.duedate.strftime("%F %R %p") rescue "Unknown" %></li>
   <li><label>Priority </label>: <%= @todo.priority %></li>
    <li><label>Assigned To </label>: <%= @todo.ato %></li>
   <li><label>Assigned By </label>: <%= @todo.aby %></li>
   <li><label>Created By </label>: <%= @todo.cby %></li>
   <li><label>Created At </label>: <%= @todo.created_at.strftime("%F %R %p") %></li>
   <li><label>Description </label>: <%= @todo.desc %></li>
</ul>
</div>
<br/>
<br/>
<script>
$(function(){
    setColorsFromSession();
});

</script>
