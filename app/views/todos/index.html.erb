<h1>Listing todos</h1>

<table>
  <tr>
    <th>Topic</th>
    <th>Desc</th>
    <th>Status</th>
    <th>Duedate</th>
    <th>Priority</th>
    <th>Created by</th>
    <th>Updated by</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @todos.each do |todo| %>
  <tr>
    <td><%= todo.topic_id %></td>
    <td><%= todo.desc %></td>
    <td><%= todo.status_id %></td>
    <td><%= todo.duedate %></td>
    <td><%= todo.priority %></td>
    <td><%= todo.created_by %></td>
    <td><%= todo.updated_by %></td>
    <td><%= link_to 'Show', todo %></td>
    <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
    <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

